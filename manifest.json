{
	"manifest_version": 3,
	"name": "웨-일이 쉽지? (Whale Mail)",
	"version": "1.0",
	"minimum_chrome_version": "125",
	"description": "This is a mail summary service using AI",
	"permissions": [
		"contextMenus",
		"scripting",
		"activeTab",
		"nativeMessaging",
		"tabs",
		"storage",
		"sidePanel"
	],
	"background": {
		"service_worker": "assets/scripts/background.js"
	},
	"icons": {
		"140": "public/images/logo-light.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://mail.google.com/*",
				"https://mail.naver.com/*"
			],
			"js": ["assets/scripts/content.js"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["assets/scripts/content.js"],
			"matches": ["https://mail.google.com/*", "https://mail.naver.com/*"]
		}
	],
	"side_panel": {
		"default_path": "public/main.html",
		"default_icon": "public/images/logo-light.png"
	}
}
